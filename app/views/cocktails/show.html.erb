<!-- overview of a specific cocktail
display dose needed for each ingredient -->
<div id="show-container" class="container h-100 d-flex flex-row align-items-center justify-content-center">
  <div class="card mb-3 d-flex flex-column align-items-flex-start">
    <%= image_tag image_url('pina_colada.jpg'), class: 'card-img-top' %>
    <div class="card-body">
      <h2 class="card-title"><%= @cocktail.name %></h2>
      <% @cocktail.doses.each do |dose| %>
        <li class="card-text">
          <%= dose.description %> - <%= dose.ingredient.name %>
          <%= link_to  dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </li>
      <% end %>
      <%= link_to 'add a new dose', new_cocktail_dose_path(@cocktail), class: "btn-ghost btn-margin"%>
    </div>
    <%= link_to 'back to list', cocktails_path, class: 'btn-form' %>
  </div>
</div>

