<div class="container h-100">
  <div class="d-flex flex-row align-items-center h-100">
    <div class="form-background w-100 d-flex flex-column align-items-center">
      <div class="form-group">
        <%= simple_form_for [ @cocktail, @dose ] do |f| %>
          <%= f.input :description %>
          <%= f.association :ingredient %>
          <%= f.submit "Submit dose", class: "btn-ghost btn-margin" %>
        <% end %>
      </div>
      <%= link_to "Back to Cocktail" , cocktail_path(@cocktail), class: 'btn-form' %>
    </div>
  </div>
</div>
